{
  "$schema": "https://json.schemastore.org/eslintrc",
  "env": {
    "browser": true,
    "jest": true
  },
  "parserOptions": {
    "project": [
      "./tsconfig.eslint.json"
    ]
  },
  "extends": [
    "@finando/eslint-config-typescript-react",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "parent",
          "sibling",
          "index",
          "internal",
          "object",
          "type"
        ],
        "pathGroups": [
          {
            "pattern": "@app/**",
            "group": "external",
            "position": "after"
          }
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "*.tsx"
      ],
      "rules": {
        "react/react-in-jsx-scope": "off"
      }
    },
    {
      "files": [
        "webpack/*"
      ],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    },
    {
      "files": [
        "jest.config.ts"
      ],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
